@{
    ViewData["Title"] = "Agregar Cliente";
}
<body>
    <header class="bg-light py-3">
        <div class="container">
            <h1 class="text-center">Agregar Nuevo Cliente</h1>
        </div>
    </header>

    <main class="my-4">
        <div class="container">
            <section>
                <div class="text-center mb-3">
                    <h2>Crear Cliente</h2>
                </div>
                <div class="d-flex justify-content-center">
                    <form class="row g-3" style="max-width: 600px; width: 100%;">
                        <div class="col-12">
                            <label for="nombreCompleto" class="form-label">Nombre Completo</label>
                            <input type="text" class="form-control" id="nombreCompleto" placeholder="Ingrese el nombre completo">
                        </div>
                        <div class="col-12">
                            <label for="email" class="form-label">Cargo</label>
                            <input type="text" class="form-control" id="cargo" placeholder="Ingrese el Cargo">
                        </div>
                        <div class="col-12">
                            <label for="telefono" class="form-label">Teléfono</label>
                            <input type="text" class="form-control" id="telefono" placeholder="Ingrese el Departamento">
                        </div>
                        <div class="col-12">
                            <label for="fechaContratacion" class="form-label">Fecha de contratación</label>
                            <input type="text" class="form-control" id="fechaContratacion" placeholder="Ingrese la Fecha de contratación">
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-primary" type="submit">Guardar</button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </main>

    <footer class="bg-light text-center py-3">
        <div class="container">
            <p>&copy; 2024 Sistema de Inventario</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
