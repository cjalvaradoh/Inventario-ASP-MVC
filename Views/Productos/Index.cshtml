@{
    ViewData["Title"] = "Productos";
}
<body>
    <header class="bg-light py-3">
        <div class="container">
            <h1 class="text-center">Lista de Productos</h1>
        </div>
    </header>

    <main class="my-4">
        <div class="container">
            <section>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2>Productos Registrados</h2>
                    <button class="btn btn-primary" type="button" onclick="window.location.href='/Home/AgregarProducto'">Agregar Producto</button>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Lenovo ThinkPad P1 Gen 6</td>
                                <td>Q18,850.99</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Monitor ASUS 34"</td>
                                <td>Q4,583.00</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Audifono KLIP XTREME</td>
                                <td>Q125.00</td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td>NEXXT Camara NHC-OF10</td>
                                <td>Q323.00</td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>Bocina ECHO DOT SMART</td>
                                <td>Q401.00</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </main>

    <footer class="bg-light text-center py-3">
        <div class="container">
            <p>&copy; 2024 Sistema de Inventario</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>